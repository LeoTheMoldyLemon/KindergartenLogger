<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KindergartenLogger.Views.GuardianPasswordPage">
    <StackLayout Orientation="Vertical">
        <Label Text="Ako ste zaboravili lozinku, pitajte ovlaštenu osobu za pomoć."></Label>
        <Entry IsPassword="true" x:Name="PasswordEntry" Placeholder="Ovdje upišite lozinku."></Entry>
        <StackLayout Orientation="Horizontal">
            <Button Clicked="ConfirmClicked" Text="Potvrdi"></Button>
            <Button Clicked="CancelClicked" Text="Odustani"></Button>
        </StackLayout>
    </StackLayout>
</ContentPage>
